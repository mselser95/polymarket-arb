{
  "title": "Polymarket Wallet Metrics",
  "tags": ["polymarket", "wallet", "balance"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 3,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "title": "USDC Balance",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "polymarket_wallet_usdc_balance{service=\"wallet-tracker\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "decimals": 2,
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 2,
      "title": "MATIC Balance",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 8, "y": 0},
      "targets": [
        {
          "expr": "polymarket_wallet_matic_balance{service=\"wallet-tracker\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 4,
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 3,
      "title": "Portfolio Value",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 16, "y": 0},
      "targets": [
        {
          "expr": "polymarket_wallet_portfolio_value{service=\"wallet-tracker\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "decimals": 2,
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 4,
      "title": "Active Positions",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 6},
      "targets": [
        {
          "expr": "polymarket_wallet_active_positions{service=\"wallet-tracker\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 5,
      "title": "Unrealized P&L",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 8, "y": 6},
      "targets": [
        {
          "expr": "polymarket_wallet_unrealized_pnl{service=\"wallet-tracker\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "decimals": 2,
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"value": -999999, "color": "red"},
              {"value": 0, "color": "yellow"},
              {"value": 0.01, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Unrealized P&L %",
      "type": "gauge",
      "gridPos": {"h": 6, "w": 8, "x": 16, "y": 6},
      "targets": [
        {
          "expr": "polymarket_wallet_unrealized_pnl_percent{service=\"wallet-tracker\"}",
          "legendFormat": "P&L %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": -1,
          "max": 1,
          "thresholds": {
            "steps": [
              {"value": -1, "color": "red"},
              {"value": -0.1, "color": "orange"},
              {"value": 0, "color": "yellow"},
              {"value": 0.1, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 7,
      "title": "USDC Balance Over Time (with Circuit Breaker Thresholds)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 12},
      "targets": [
        {
          "expr": "polymarket_wallet_usdc_balance{service=\"wallet-tracker\"}",
          "legendFormat": "USDC Balance",
          "refId": "A"
        },
        {
          "expr": "polymarket_circuit_breaker_disable_threshold_usdc{service=\"arb-bot\"}",
          "legendFormat": "Disable Threshold (trading stops)",
          "refId": "B"
        },
        {
          "expr": "polymarket_circuit_breaker_enable_threshold_usdc{service=\"arb-bot\"}",
          "legendFormat": "Enable Threshold (trading resumes)",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "color": {"mode": "palette-classic"},
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "USDC Balance"},
            "properties": [
              {"id": "color", "value": {"fixedColor": "blue", "mode": "fixed"}},
              {"id": "custom.lineWidth", "value": 3}
            ]
          },
          {
            "matcher": {"id": "byName", "options": "Disable Threshold (trading stops)"},
            "properties": [
              {"id": "color", "value": {"fixedColor": "red", "mode": "fixed"}},
              {"id": "custom.lineStyle", "value": {"dash": [10, 5], "fill": "dash"}},
              {"id": "custom.fillOpacity", "value": 0}
            ]
          },
          {
            "matcher": {"id": "byName", "options": "Enable Threshold (trading resumes)"},
            "properties": [
              {"id": "color", "value": {"fixedColor": "yellow", "mode": "fixed"}},
              {"id": "custom.lineStyle", "value": {"dash": [10, 5], "fill": "dash"}},
              {"id": "custom.fillOpacity", "value": 0}
            ]
          }
        ]
      },
      "options": {
        "tooltip": {"mode": "multi"},
        "legend": {"displayMode": "table", "placement": "bottom", "calcs": ["last", "min", "max"]}
      }
    },
    {
      "id": 8,
      "title": "Portfolio Value Over Time",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 20},
      "targets": [
        {
          "expr": "polymarket_wallet_portfolio_value{service=\"wallet-tracker\"}",
          "legendFormat": "Portfolio",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "color": {"mode": "palette-classic"}
        }
      }
    }
  ]
}
