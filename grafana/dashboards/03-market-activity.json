{
  "title": "Polymarket Market Activity",
  "tags": ["polymarket", "markets", "activity"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus"
      },
      {
        "name": "event_type",
        "type": "custom",
        "multi": true,
        "includeAll": true,
        "options": [
          {"text": "Book", "value": "book"},
          {"text": "Price Change", "value": "price_change"},
          {"text": "Last Trade", "value": "last_trade_price"}
        ],
        "current": {"text": "All", "value": ["$__all"]}
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Markets Discovered Total",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "polymarket_discovery_markets_total",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"value": 0, "color": "blue"},
              {"value": 100, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "New Markets Subscribed Rate",
      "type": "timeseries",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
      "targets": [
        {
          "expr": "rate(polymarket_discovery_new_markets_total[5m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        }
      }
    },
    {
      "id": 3,
      "title": "Active WebSocket Subscriptions",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "polymarket_ws_subscription_count",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    },
    {
      "id": 4,
      "title": "Orderbook Snapshots in Memory",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
      "targets": [
        {
          "expr": "polymarket_orderbook_snapshots_tracked",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    },
    {
      "id": 5,
      "title": "Orderbook Updates by Event Type",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
      "targets": [
        {
          "expr": "rate(polymarket_orderbook_updates_total{event_type=~\"$event_type\"}[1m])",
          "legendFormat": "{{event_type}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": ["lastNotNull", "mean"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {"stacking": {"mode": "normal"}}
        }
      }
    },
    {
      "id": 6,
      "title": "WebSocket Messages by Type",
      "type": "piechart",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
      "targets": [
        {
          "expr": "sum by(event_type) (polymarket_ws_messages_received_total)",
          "legendFormat": "{{event_type}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value", "percent"]
        },
        "pieType": "pie"
      }
    },
    {
      "id": 7,
      "title": "Discovery Poll Duration (Percentiles)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(polymarket_discovery_poll_duration_seconds_bucket[1m]))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, rate(polymarket_discovery_poll_duration_seconds_bucket[1m]))",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, rate(polymarket_discovery_poll_duration_seconds_bucket[1m]))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    },
    {
      "id": 8,
      "title": "Discovery Errors",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
      "targets": [
        {
          "expr": "rate(polymarket_discovery_poll_errors_total[1m])",
          "legendFormat": "Poll Errors",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {"fixedColor": "red", "mode": "fixed"}
        }
      }
    },
    {
      "id": 9,
      "title": "Metadata Cache Performance",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
      "targets": [
        {
          "expr": "rate(polymarket_markets_metadata_cache_hits_total[1m])",
          "legendFormat": "Hits",
          "refId": "A"
        },
        {
          "expr": "rate(polymarket_markets_metadata_cache_misses_total[1m])",
          "legendFormat": "Misses",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {"stacking": {"mode": "normal"}}
        }
      }
    },
    {
      "id": 10,
      "title": "Metadata Fetch Duration",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(polymarket_markets_metadata_fetch_duration_seconds_bucket[1m]))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.99, rate(polymarket_markets_metadata_fetch_duration_seconds_bucket[1m]))",
          "legendFormat": "p99",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    },
    {
      "id": 11,
      "title": "Metadata Fetch Errors",
      "type": "stat",
      "gridPos": {"h": 4, "w": 12, "x": 0, "y": 28},
      "targets": [
        {
          "expr": "rate(polymarket_markets_metadata_fetch_errors_total[5m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 0.01, "color": "yellow"},
              {"value": 0.1, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 12,
      "title": "WebSocket Messages Throughput",
      "type": "stat",
      "gridPos": {"h": 4, "w": 12, "x": 12, "y": 28},
      "targets": [
        {
          "expr": "sum(rate(polymarket_ws_messages_received_total[1m]))",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "decimals": 2
        }
      }
    }
  ]
}
