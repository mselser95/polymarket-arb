{
  "title": "Circuit Breaker - Balance Protection",
  "tags": ["polymarket", "circuit-breaker", "balance", "risk-management"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus"
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Circuit Breaker State",
      "type": "stat",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "polymarket_circuit_breaker_enabled{service=\"arb-bot\"}",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "DISABLED ⛔",
                  "color": "red"
                }
              }
            },
            {
              "type": "value",
              "options": {
                "1": {
                  "text": "ENABLED ✅",
                  "color": "green"
                }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 1, "color": "green"}
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 2,
      "title": "Safety Margin",
      "type": "gauge",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "polymarket_circuit_breaker_balance_usdc{service=\"arb-bot\"} - polymarket_circuit_breaker_disable_threshold_usdc{service=\"arb-bot\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showThresholdLabels": true,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "decimals": 2,
          "min": -50,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": -50, "color": "red"},
              {"value": 0, "color": "yellow"},
              {"value": 10, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Balance vs Thresholds",
      "type": "timeseries",
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "polymarket_circuit_breaker_balance_usdc{service=\"arb-bot\"}",
          "legendFormat": "Current Balance",
          "refId": "A"
        },
        {
          "expr": "polymarket_circuit_breaker_disable_threshold_usdc{service=\"arb-bot\"}",
          "legendFormat": "Disable Threshold (stops trading)",
          "refId": "B"
        },
        {
          "expr": "polymarket_circuit_breaker_enable_threshold_usdc{service=\"arb-bot\"}",
          "legendFormat": "Enable Threshold (resumes trading)",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "decimals": 2,
          "color": {"mode": "palette-classic"},
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "spanNulls": true
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "Current Balance"},
            "properties": [
              {"id": "color", "value": {"fixedColor": "blue", "mode": "fixed"}},
              {"id": "custom.lineWidth", "value": 3}
            ]
          },
          {
            "matcher": {"id": "byName", "options": "Disable Threshold (stops trading)"},
            "properties": [
              {"id": "color", "value": {"fixedColor": "red", "mode": "fixed"}},
              {"id": "custom.lineStyle", "value": {"dash": [10, 5], "fill": "dash"}}
            ]
          },
          {
            "matcher": {"id": "byName", "options": "Enable Threshold (resumes trading)"},
            "properties": [
              {"id": "color", "value": {"fixedColor": "yellow", "mode": "fixed"}},
              {"id": "custom.lineStyle", "value": {"dash": [10, 5], "fill": "dash"}}
            ]
          }
        ]
      },
      "options": {
        "tooltip": {"mode": "multi", "sort": "none"},
        "legend": {"displayMode": "table", "placement": "bottom", "calcs": ["last", "min", "max"]}
      }
    },
    {
      "id": 4,
      "title": "Current USDC Balance",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 0, "y": 18},
      "targets": [
        {
          "expr": "polymarket_circuit_breaker_balance_usdc{service=\"arb-bot\"}",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "decimals": 2,
          "thresholds": {
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 5, "color": "yellow"},
              {"value": 20, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Disable Threshold",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 6, "y": 18},
      "targets": [
        {
          "expr": "polymarket_circuit_breaker_disable_threshold_usdc{service=\"arb-bot\"}",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "decimals": 2,
          "color": {"mode": "fixed", "fixedColor": "red"}
        }
      }
    },
    {
      "id": 6,
      "title": "Enable Threshold",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 12, "y": 18},
      "targets": [
        {
          "expr": "polymarket_circuit_breaker_enable_threshold_usdc{service=\"arb-bot\"}",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "decimals": 2,
          "color": {"mode": "fixed", "fixedColor": "yellow"}
        }
      }
    },
    {
      "id": 7,
      "title": "Average Trade Size (Rolling)",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 18, "y": 18},
      "targets": [
        {
          "expr": "polymarket_circuit_breaker_avg_trade_size_usdc{service=\"arb-bot\"}",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "decimals": 2,
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 8,
      "title": "Average Trade Size Over Time",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
      "targets": [
        {
          "expr": "polymarket_circuit_breaker_avg_trade_size_usdc{service=\"arb-bot\"}",
          "legendFormat": "Avg Trade Size (last 20 trades)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "decimals": 2,
          "color": {"mode": "palette-classic"},
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      },
      "options": {
        "tooltip": {"mode": "single"},
        "legend": {"displayMode": "list", "placement": "bottom"}
      }
    },
    {
      "id": 9,
      "title": "State Change History",
      "type": "state-timeline",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
      "targets": [
        {
          "expr": "polymarket_circuit_breaker_enabled{service=\"arb-bot\"}",
          "legendFormat": "Circuit Breaker",
          "refId": "A"
        }
      ],
      "options": {
        "showValue": "auto",
        "rowHeight": 0.9,
        "mergeValues": true
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "DISABLED",
                  "color": "red"
                }
              }
            },
            {
              "type": "value",
              "options": {
                "1": {
                  "text": "ENABLED",
                  "color": "green"
                }
              }
            }
          ]
        }
      }
    },
    {
      "id": 10,
      "title": "State Changes (Total)",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 32},
      "targets": [
        {
          "expr": "increase(polymarket_circuit_breaker_state_changes_total{service=\"arb-bot\"}[24h])",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "thresholds": {
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 5, "color": "yellow"},
              {"value": 20, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 11,
      "title": "Opportunities Skipped (Circuit Breaker)",
      "type": "timeseries",
      "gridPos": {"h": 6, "w": 16, "x": 8, "y": 32},
      "targets": [
        {
          "expr": "rate(polymarket_execution_opportunities_skipped_total{service=\"arb-bot\",reason=\"circuit_breaker\"}[5m]) * 60",
          "legendFormat": "Skipped (opportunities/min)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 2,
          "color": {"mode": "palette-classic"},
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 20,
            "stacking": {"mode": "none"}
          }
        }
      },
      "options": {
        "tooltip": {"mode": "single"},
        "legend": {"displayMode": "list", "placement": "bottom"}
      }
    }
  ],
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["10s", "30s", "1m", "5m", "15m"]
  }
}
